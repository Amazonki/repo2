symbols = ['Cherry', 'Strawberry', 'Grape', 'Plum', 'Watermelon', 'Bar', '7']
phrases = ['Good Luck', 'It was close', 'Fortune favors the brave', 'Live one day']
puts 'Tell me your age'
age = gets.to_i
if age < 18
  puts 'Your age is under 18, according to the slot rules we cant gave you permission to play this game.'
  exit
end

puts 'How much money do you have?'
deposit = gets.to_i
if deposit <= 0
  puts 'You dont have enough money to play this game'
  exit
end

deposit.times do
  puts phrases.sample
  x = symbols.sample
  y = symbols.sample
  z = symbols.sample
  puts "reel № 1 = #{x}, reel №2 = #{y}, reel №3 = #{z}"
  puts "Current balance: #{money}"
end
